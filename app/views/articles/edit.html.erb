<% if @article.errors.any? %>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :Naslov %></br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :Tekst %></br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit :Objavi %>
    </p>

<% end %>

<%= link_to "Go back to articles list", articles_path %>
